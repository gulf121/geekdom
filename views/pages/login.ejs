<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('../partials/head', {title: 'Member Login'}) -%>
</head>
<body>
  <main role="main">
    <%- include('../partials/header') -%>

    <section class="member-login">
      <div class="hide error-msg js-error-msg"></div>
      <form class="login-form js-member-login-form">
        <div class="row">
          <div class="column">

            <label for="userEmail">Email:</label>
            <input type="email" id="userEmail" placeholder="member@bannerstack.com" required>

            <label for="userPassword">Password:</label>
            <input type="password" id="userPassword" placeholder="******" required>

            <input type="submit" value="LOGIN" class="product-details-btn js-login-btn">
          </div>
        </div>
      </form>
    </section>

    <%- include('../partials/footer') -%>

  </main>

  <%- include('../partials/final-scripts') -%>
  <script src="/js/user.js" type="text/javascript"></script>
  <script src="/js/app.js" type="text/javascript"></script>

</body>
</html>
